{
  "name": "medplum-mcp",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "bin": {
    "medplum-mcp-server": "dist/src/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "tsc && chmod +x dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/src/index.js",
    "test:connection": "ts-node src/test-connection.ts",
    "test:harness": "npx ts-node src/llm-test-harness.ts",
    "chat": "npm run build && node dist/src/llm-test-harness.js",
    "test:mcp": "node dist/src/index.js",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "medplum",
    "fhir",
    "healthcare"
  ],
  "author": "",
  "license": "MIT",
  "description": "MCP server for Medplum FHIR operations",
  "dependencies": {
    "@medplum/cli": "^5.0.10",
    "@medplum/core": "^5.0.10",
    "@medplum/fhirtypes": "^5.0.10",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@types/readline-sync": "^1.4.8",
    "dotenv": "^17.2.3",
    "node-fetch": "^2.7.0",
    "openai": "^6.15.0",
    "readline-sync": "^1.4.10",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.26",
    "@types/node-fetch": "^2.6.13",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1"
  }
}
